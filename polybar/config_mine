[module/date]
type = internal/date
interval = 1.0
format-margin = 1
; format =%{A1:orage:} <label> %{A}

;%A %d %B %Y %l:%M:%S %p
; corresponds to Tuesday 03 October 2017 07:47:29 PM IST;
; reference: http://www.adminschoice.com/unix-date-format-examples
date = "%a %b %d"
label-active-font = 6
time = "%l:%M %p"
date-alt-alt = "ÔÅ≥  %m-%d  "
time-alt-alt = "ÔÄó  %H:%M"
date-alt = "ÔÅ≥  %A %Y-%m-%d (Week %V)  "
time-alt = "ÔÄó %H:%M:%S"
label = %date% %time%


